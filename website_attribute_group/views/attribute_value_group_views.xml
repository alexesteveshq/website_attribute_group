<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="attribute_value_group_tree" model="ir.ui.view">
        <field name="name">attribute.value.group.tree</field>
        <field name="model">attribute.value.group</field>
        <field name="arch" type="xml">
            <tree string="Value Groups" editable="bottom">
                <field name="name" required="1"/>
                <field name="image"/>
            </tree>
        </field>
    </record>

    <record id="attribute_value_group_action" model="ir.actions.act_window">
        <field name="name">Value Groups</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">attribute.value.group</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            action="attribute_value_group_action" id="menu_attribute_value_group_action"
            parent="stock.menu_product_in_config_stock" sequence="5" groups="product.group_product_variant"/>
</odoo>
